<?xml version="1.0" encoding="utf-8"?>

<com.labs.okey.freeride.views.LayoutRipple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:rippleSpeed="60.0"
    app:rippleColor="@color/ColorPrimary"
    tools:ignore="MissingPrefix"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp"
    android:id="@+id/myRideRow"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/user_details_card"
        android:layout_width="fill_parent"
        app:cardElevation="4dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageDriver"
                    android:src="@drawable/driver50"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <!--<ImageView-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:id="@+id/SteeringWheel"-->
                    <!--android:src="@drawable/driver50"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_alignLeft="@+id/imageDriver"-->
                    <!--android:layout_alignEnd="@+id/imageDriver"-->
                    <!--android:layout_marginBottom="8dp" />-->

            </RelativeLayout>

            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="date"
            android:id="@+id/txtCreated"
            android:layout_gravity="center|end"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="name"
            android:id="@+id/txtDriverName"
            android:layout_gravity="start|center"
            android:layout_alignBottom="@+id/ApprovedSing"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ApprovedSing"
            android:src="@drawable/attention_26"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txtCreated"
            android:layout_toStartOf="@+id/txtCreated"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="8dp" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</com.labs.okey.freeride.views.LayoutRipple>
